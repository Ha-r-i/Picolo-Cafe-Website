rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Menu items folder: Public read, authenticated write
    match /menu-items/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow other paths for authenticated users (for flexibility)
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
